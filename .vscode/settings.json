{
  "files.exclude": {
    "**/__pycache__": true,
    ".pycache": true,
    ".ruff_cache": true
  },
  "cSpell.words": [
    "aioboto",
    "aiobotocore",
    "boto",
    "botocore",
    "dagster",
    "dedupe",
    "Fargate",
    "packyak",
    "pydantic",
    "selectbox",
    "streamlit"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.languageServer": "Default",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoImportCompletions": true,
  "python.pyright.enabled": true,
  "python.pyright.autoImportCompletions": true,
  "python.pyright.typeCheckingMode": "strict"
}
